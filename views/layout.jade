	body(data-spy="scroll", data-target=".navbar-app")
		section.container
			section.row
				section.col-md-4
					a(href='/')
						img(src='/images/logo.png').img-responsive
				section.col-md-8.right-align
					nav.navbar.navbar-default(role="navigation")#nav-parent
						div.navbar-header
							button(type='button',data-toggle="collapse",data-target="#nav").navbar-toggle
								span.sr-only Toggle Menu
								span.icon-bar
								span.icon-bar
								span.icon-bar
						div.collapse.navbar-collapse#nav.pull-right
							ul.nav.navbar-nav
								li
									a(href='/') HOME
								li
									a(href='/about-us') ABOUT US
								li
									a(href='/contact') CONTACT US
								li
									a(href='/news') NEWS
								li
									a(href='/downloads') DOWNLOADS
			block content
			hr
			footer.row
				section.col-md-3
					small &copy; 2014 Maldives Trade Union
				section.col-md-3.pull-right.align-right
					small
						a(href='') Site Map
