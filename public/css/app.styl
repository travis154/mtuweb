main-color=#00834F

a
	color main-color
trans(arg)
	transition arg
	-webkit-transition arg
	-moz-transition arg
	-o-transition arg
*
	//font-family "Open Sans" !important

body
	overflow-x: hidden;
.mark
	background #f0f0f0
	border solid 1px #d0d0d0
.align-right
	text-align right
		
.flexible-container
	position: relative
	padding-bottom: 44.25%
	padding-top: 30px
	height: 0
	overflow: hidden
	iframe
	object
	embed
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
nav
	margin-top: 3em;
.navbar-default
	.navbar-nav
		>li
			&:hover
				background main-color
				>a
					color white
			>a
				color main-color
.navbar-default
	background-color transparent
	border-color transparent		

body
h1
h2
h3
h4
h5
h6
.h1
.h2
.h3
.h4
.h5
.h6
	font-family: "Open Sans", "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-weight: 200;
.carousel-caption
	text-shadow 0 1px 1px rgba(0, 0, 0, 0.34)

#quickcontact
	>span
		trans(padding .21s ease-in, background .21s ease-in)
		background transparent
		display inline-block
		margin-right 10px
		>span
			&:first-child
				color #00e0ff
#quickcontact.active
	>span
		background #00e0ff
		padding 20px
		font-weight 400	
		>span
			&:first-child
				color white
.white
	color #f0f0f0
